<h1>Eat The Burger!</h1>
    <h3>Add a burger, then click on it to eat it!</h3>

<main>
  <div class="container">
    <div clsas = "row center">
      <div class = col s12>
        <img class = "burger-img" src= "https://icon-library.net/images/hamburger-icon-png/hamburger-icon-png-7.jpg">
      </div>
    </div>
    <div class="row center">
      <div class="col s12">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s12">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add Your Burger</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Your Burger">
      <button type="submit" class="addBurgerButton">Add My Burger</button>
    </form>
  </div>
</div>